{
    "name": "pr-tracker",
    "version": "0.0.0",
    "private": true,
    "type": "module",
    "scripts": {
        "build": "tsc -b && vite build",
        "build:all": "npm run build:chrome && npm run build:firefox",
        "build:chrome": "tsc -b && cross-env BROWSER=chrome vite build",
        "build:firefox": "tsc -b && cross-env BROWSER=firefox vite build",
        "check-format": "prettier --check .",
        "dev": "vite",
        "format": "prettier --write .",
        "lint": "eslint .",
        "prepare": "husky install",
        "preview": "vite preview",
        "test:e2e": "wdio run wdio.conf.ts",
        "test:e2e:debug": "cross-env DEBUG=true wdio run wdio.conf.ts"
    },
    "prettier": {
        "bracketSpacing": true,
        "singleQuote": true,
        "tabWidth": 4,
        "trailingComma": "es5"
    },
    "dependencies": {
        "@tailwindcss/vite": "^4.0.12",
        "react-icons": "^5.5.0",
        "webextension-polyfill": "^0.12.0"
    },
    "devDependencies": {
        "@eslint/js": "^9.21.0",
        "@samrum/vite-plugin-web-extension": "^5.1.1",
        "@types/chrome": "^0.0.307",
        "@types/react": "^19.0.10",
        "@types/react-dom": "^19.0.4",
        "@types/webextension-polyfill": "^0.10.5",
        "@vitejs/plugin-react": "^4.4.1",
        "@wdio/browser-runner": "^9.12.7",
        "@wdio/cli": "^9.12.7",
        "@wdio/firefox-profile-service": "^9.12.6",
        "@wdio/mocha-framework": "^9.12.6",
        "@wdio/spec-reporter": "^9.12.6",
        "@wdio/visual-service": "^7.0.0",
        "cross-env": "^7.0.3",
        "eslint": "^9.21.0",
        "eslint-plugin-react-hooks": "^5.1.0",
        "eslint-plugin-react-refresh": "^0.4.19",
        "globals": "^15.15.0",
        "lint-staged": "^15.5.1",
        "prettier": "^3.5.3",
        "react": "^19.1.0",
        "react-dom": "^19.1.0",
        "sort-package-json": "^3.0.0",
        "tailwindcss": "^4.0.12",
        "typescript": "~5.7.2",
        "typescript-eslint": "^8.24.1",
        "vite": "^5.4.14",
        "wdio-video-reporter": "^6.1.1"
    }
}
